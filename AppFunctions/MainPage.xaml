<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFunctions.MainPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

                <Image
                    Source="dotnet_bot.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    Margin="0, 10, 0, 0"/>

                <Label
                    x:Name="lblCodigo" 
                    Text="Código"
                    HorizontalOptions="Center"
                    WidthRequest="350"/>

                <Entry
                    x:Name="etrCodigo"
                    HorizontalOptions="Center"
                    WidthRequest="350"
                    IsEnabled="False"
                    Margin="0, -20, 0, 0"/>

                <Label
                    x:Name="lblNome" 
                    Text="Nome da espécie"
                    HorizontalOptions="Center"
                    WidthRequest="350"/>

                <Entry
                    x:Name="etrNome"
                    HorizontalOptions="Center"
                    WidthRequest="350"
                    Margin="0, -20, 0, 0"/>

                <Button
                    x:Name="btnInsert"
                    Text="Enviar" 
                    HorizontalOptions="Center" 
                    WidthRequest="250"
                    Margin="0, 10, 0, 0"
                    Clicked="btnInsertClicked"/>

                <SearchBar 
                    x:Name="searchBar"
                    Placeholder="Pesquisar..."
                    WidthRequest="350"
                    Margin="0, 20, 0, 0"
                    TextChanged="searchBarChanged"/>

            <ListView
                    x:Name="viewEspecie"
                    ItemSelected="lstespecie_ItemSelected">

                <ListView.Header>

                    <Grid
                            ColumnDefinitions="*, *"
                            WidthRequest="350">

                        <Label Grid.Column="0" Text="ID"/>
                        <Label Grid.Column="1" Text="Nome"/>

                    </Grid>

                </ListView.Header>

                <ListView.ItemTemplate>

                    <DataTemplate>

                        <ViewCell>

                            <ViewCell.ContextActions>
                                
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked" />
                                <MenuItem Text="Alterar" Clicked="MenuItem_Clicked_1"/>
                                
                            </ViewCell.ContextActions>

                            <Grid
                               ColumnDefinitions="*, *" 
                               WidthRequest="350">

                                <Label Grid.Column="0" Text="{Binding espId}"/>
                                <Label Grid.Column="1" Text="{Binding espNome}"/>

                            </Grid>

                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
